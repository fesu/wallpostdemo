<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    tools:context="com.example.wallpostdemo.UserRegisterActivity"
    
    android:orientation="vertical" >
    
    
    <ScrollView android:id="@+id/scrol_signup_details"
        android:layout_width="match_parent"        
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="visible">
     
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:orientation="vertical" >
               
    
    <!-- User Account Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/login_background"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/tv_acoount_details_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
        	android:layout_marginBottom="10dp"
        	android:layout_marginLeft="10dp"
            android:text="Account Details"
            android:textSize="20sp"
            android:textColor="#009688" />

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#009688" />
        
        <EditText
                android:id="@+id/edt_signup_email"
                android:inputType="textEmailAddress" 
                android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:hint="E-Mail"
        		android:layout_marginTop="10dp"
        		android:layout_marginBottom="10dp"
        		android:paddingLeft="10dp"
        		android:paddingRight="5dp"
        		android:paddingStart="10dp"
                android:drawableLeft="@drawable/ic_action_email"
                android:drawablePadding="5dp"
                android:background="@android:color/transparent" />
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            
            <EditText
                android:id="@+id/edt_signup_username"                 
                android:layout_width="match_parent"                
                android:singleLine="true"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="10dp"
        		android:layout_marginBottom="10dp"
        		android:hint="Username"
        		android:paddingLeft="10dp"
        		android:paddingRight="5dp"
        		android:paddingStart="10dp"
                android:drawableLeft="@drawable/ic_action_person"
                android:drawablePadding="5dp"
                android:background="@android:color/transparent" />
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            
            <EditText
                android:id="@+id/edt_signup_password"
                android:inputType="textPassword" 
                android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="10dp"
        		android:layout_marginBottom="10dp"
        		android:hint="Password"
        		android:paddingLeft="10dp"
        		android:paddingRight="5dp"
        		android:paddingStart="10dp"
                android:drawableLeft="@drawable/ic_action_secure"
                android:drawablePadding="5dp"
                android:background="@android:color/transparent" />
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            
                        
            <EditText
                android:id="@+id/edt_signup_confirm_password"
                android:inputType="textPassword" 
                android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="10dp"
        		android:layout_marginBottom="10dp"
        		android:hint="Confirm Password"
        		android:paddingLeft="10dp"
        		android:paddingRight="5dp"
        		android:paddingStart="10dp"
                android:drawableLeft="@drawable/ic_action_secure"
                android:drawablePadding="5dp"
                android:background="@android:color/transparent" />
            
    </LinearLayout>
    

    <!-- User Personal Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"        
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/login_background"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/tv_personal_details_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
        	android:layout_marginBottom="10dp"
        	android:layout_marginLeft="10dp"
            android:text="Personal Details"
            android:textSize="20sp"
            android:textColor="#009688" />

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#009688" />
        
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal" >
            
            <RadioGroup
                android:id="@+id/rbtng_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:gravity="center" >
                
        	<RadioButton
            android:id="@+id/rbtn_signup_male"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
           	android:layout_marginTop="10dp"
        	android:layout_marginBottom="10dp"
        	android:layout_marginLeft="20dp"
        	android:layout_marginRight="10dp"
        	android:paddingLeft="10dp"          
        	android:paddingRight="5dp"
        	android:paddingStart="10dp"      
            android:drawablePadding="5dp"
            android:background="@android:color/transparent" 
            android:drawableRight="@drawable/male24" />
        
        	<RadioButton
            android:id="@+id/rbtn_signup_female"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
        	android:layout_marginBottom="10dp"
        	android:layout_marginRight="20dp"
        	android:layout_marginLeft="10dp"
        	android:paddingLeft="10dp"
        	android:paddingRight="5dp"
        	android:paddingStart="10dp"                
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/female24" />
            </RadioGroup>
            
        </RelativeLayout>
                
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            
            <EditText
                android:id="@+id/edt_signup_birthdate"                 
                android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:inputType="number"
        		android:layout_marginTop="10dp"
        		android:layout_marginBottom="10dp"
        		android:hint="Birthdate"
        		android:paddingLeft="10dp"
        		android:paddingRight="5dp"
        		android:paddingStart="10dp"
                android:drawableLeft="@drawable/ic_action_event"
                android:drawablePadding="5dp"
                android:background="@android:color/transparent" />
            
            
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            
            <Spinner
                android:id="@+id/spnr_signup_country"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
        		android:layout_marginBottom="10dp"
        		android:paddingLeft="10dp"
        		android:paddingRight="5dp"
        		android:paddingStart="10dp"        		
        		android:background="@android:color/transparent" />
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            
            <EditText
                android:id="@+id/edt_signup_contact"                 
                android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:inputType="number"
        		android:layout_marginTop="10dp"
        		android:layout_marginBottom="10dp"
        		android:hint="Contact Number"
        		android:paddingLeft="10dp"
        		android:paddingRight="5dp"
        		android:paddingStart="10dp"
                android:drawableLeft="@drawable/ic_action_call"
                android:drawablePadding="5dp"
                android:background="@android:color/transparent" />
            
            
    </LinearLayout>  <!-- End Of User Personal Details -->
     
     <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp" >
    
        <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:gravity="center"
        android:textColor="@android:color/background_light"
        android:background="#009688" />    
    
    </RelativeLayout>
     
    
    </LinearLayout>     
    
    </ScrollView>  
    
    
    
</RelativeLayout>
