<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.TranslucentActionBar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:actionBarDivider">@android:color/transparent</item>
        <!-- <item name="android:actionBarSize">100dp</item> -->
    </style>

    <style name="Theme.TranslucentActionBar.ActionBar" />

    <style name="Theme.TranslucentActionBar.ActionBar.Overlay">
        <item name="android:actionBarStyle">@style/Widget.ActionBar.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <!-- <item name="actionBarTabStyle">@style/MyActionBarTabs</item> -->
    </style>
    
    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs"
           parent="@style/Widget.ActionBar.Transparent">
        <!-- tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item>		
		<item name="android:gravity">center</item>
		<item name="android:minHeight">100dp</item>
        <!-- Support library compatibility -->
        <!-- <item name="background">@drawable/actionbar_tab_indicator</item> -->
    </style>

